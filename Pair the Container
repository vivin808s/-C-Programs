#include<stdio.h>
int main()
{
	int n;int i,j,c;
	scanf("%d",&n);
	int a[n];
	//printf("enter the value for the array \n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	for(j=0;j<n-1;j++)
	{
		for(i=0;i<n-1;i++)
		{
			if(a[i]<a[i+1])
			{
			c=a[i];
			a[i]=a[i+1];
			a[i+1]=c;
			}
		}
		
	}
	//printf("sorted array is\n");
	int left=0,right=n-1;
  while(left<right)
  {
    printf("%d %d\n",a[left],a[right]);
    left++;
    right--;
  }
  
  if(n%2!=0)
  {
    printf("%d 0\n",a[right]);
  }
}
