#include <stdio.h>

// Function to calculate the factorial of a number using recursion
int factorial(int n) {
    if (n == 0 || n == 1) {
        return 1;
    }

    return n * factorial(n - 1);
}

int main() {
    int num;

    // Input an integer
    scanf("%d", &num);

    // Calculate and print the factorial using recursion
    printf("The factorial of %d is %d\n", num, factorial(num));

    return 0;
}
