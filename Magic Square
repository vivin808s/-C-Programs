#include <stdio.h>
int main() {
 int r;
 scanf("%d", &r);
 int a[10][10];
 int d1 = 0, d2 = 0;
 for (int i = 0; i < r; i++) {
 for (int j = 0; j < r; j++) {
 scanf("%d", &a[i][j]);
 }
 }
 for (int i = 0; i < r; i++) {
 for (int j = 0; j < r; j++) {
 if (i == j) {
 d1 += a[i][j];
 }
 if (i == r - j - 1) {
 d2 += a[i][j];
 }
 }
 }
 if (d1 == d2) {
 printf("Yes\n");
 } else {
 printf("No\n");
 }
 return 0;
}
