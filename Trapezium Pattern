#include <stdio.h>
int main()
{
  int n;
  scanf("%d",&n);
  int i,j,h,k,a=1,b=n*n+1;
  for(i=n;i>=1;i--){
    for(h=0;h<n-i;h++){
      printf("--");
    }
    for(j=0;j<i;j++){
      printf("%d*",a++);
    }
    for(k=0;k<i-1;k++){
      printf("%d*",b++);
    }
    printf("%d\n",b);
    b=b-2*(i-1);
  }
   return 0;
}
