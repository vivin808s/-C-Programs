#include <stdio.h>
int main() {
 int n;
 scanf("%d", &n);
 int a[n];
 int even_sum = 0, odd_sum = 0;
 for (int i = 0; i < n; i++) {
 scanf("%d", &a[i]);
 }
 for (int i = 0; i < n; i++) {
 if (a[i] % 2 == 0) {
 even_sum += a[i];
 } else {
 odd_sum += a[i];
 }
 }
 printf("The sum of the even numbers in the array is %d\n", even_sum);
 printf("The sum of the odd numbers in the array is %d", odd_sum);
 return 0;
}
