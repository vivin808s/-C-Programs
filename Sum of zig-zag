#include <stdio.h>
int main()
{
   int n,m,i,j,sum=0;
  scanf("%d%d",&n,&m);
  int a[n][n];
  for(i=0;i<n;i++)
    for(j=0;j<n;j++)
      scanf("%d",&a[i][j]);
 	for(i=0;i<n;i++)
	{
      sum=sum+a[0][i];
      sum=sum+a[n-1][i];
    }
     for(i=1;i<n-1;i++)
     {
       sum= sum+a[i][n-1-i];
     }
  printf("Sum of Zig-Zag pattern is %d",sum);
}
