#include <stdio.h>
int main() {
 int n;
 scanf("%d", &n);
 int a[n];
 for (int i = 0; i < n; i++) {
 scanf("%d", &a[i]);
 }
 int p1 = 0, p2 = n - 1;
 while (p1 < p2) {
 while (a[p1] % 2 == 0 && p1 < p2) {
 p1++;
 }
 while (a[p2] % 2 != 0 && p1 < p2) {
 p2--;
 }
 if (p1 < p2) {
 // Swap elements
 int temp = a[p1];
 a[p1] = a[p2];
 a[p2] = temp;
 p1++;
 p2--;
 }
 }
 printf("Array after Segregation\n");
 for (int i = 0; i < n; i++) {
 printf("%d ", a[i]);
 }
 return 0;
}
